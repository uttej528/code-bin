#include<stdio.h> //area of retangle,triangle,circlr,square
int main(){ 
   int r,l,b,s,h,j,area,n;
   printf("enter 1 to find area of cirle\n");
    printf("enter 2 to find area of rectangle\n");
     printf("enter 3 to find area of triangle\n"); 
     printf("enter 4 to find area of square\n");
     scanf("%d",&n);
     switch(n){
         case 1:printf("enter the value of r");
                scanf("%d",&r);
                 area=3.14*r*r;
                 printf("%d",area);
                 break;
         case 2:printf("enter the value of l and r");
                 scanf("%d%d",&l,&r);
                   area=l*r;
                    printf("%d",area);
                   break;
         case 3:printf("enter the value of h,j");
                 scanf("%d%d",&h,&j);
                 area=0.5*h*j;
                     printf("%d",area);
                     break;
         case 4:printf("enter the value of s");
                         scanf("%d",&s);
                       area=s*s;
                       printf("%d",area);
                       break;
        default:printf("enter valid number");
     }
     return 0;
    }
