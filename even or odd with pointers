#include<stdio.h>
int main()
{ int n,*ptr;
 
 printf("enter the value of n");
 scanf("%d",&n);
    
   ptr=&n;
   
   if(*ptr%2==0){
       
       
       printf("it is even number");
       
   } 
    
    if(*ptr%2!=0){
        
        printf("entered number is odd number");
        
    }
    
return 0;    
}
