#include<stdio.h>
int main(){ //program to calculate simple intrest
    int p,t,r; float si; /*p refers to principal amount
                          t refers to time  r refers rate*/
    printf("enter te value of p,t,r");
    scanf("%d%d%d",&p,&t,&r);
    si=(p*t*r)/100;
    printf("%f",si);
    return 0;
    }
